<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/appbar"
        android:layout_alignParentTop="true"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:background="@color/purple"
         >
         <ImageView
             android:layout_gravity="center"
             android:layout_width="250dp"
             android:layout_height="30dp"
             app:srcCompat="@drawable/jason_vehicle_trading"
             android:layout_margin="30dp"
             app:tint="@color/white"
             />
     </LinearLayout>


    <EditText
        android:layout_below="@id/appbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:background="@color/light_gray"
        android:drawableLeft="@drawable/baseline_search_24"
        android:drawablePadding="5dp"
        android:hint="Search by chassis number"
        android:id="@+id/editText_search"
        android:paddingHorizontal="10dp" />
   <LinearLayout
       android:id="@+id/appbar_secondary"
       android:layout_below="@id/editText_search"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center_vertical"
       android:background="@color/white"
       android:elevation="2dp">
       <com.google.android.material.button.MaterialButton
           style="@style/Widget.Material3.Button.IconButton.Filled"
           android:id="@+id/btn_add"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:backgroundTint="@color/blue"
           app:cornerRadius="5dp"
           android:layout_marginVertical="10dp"
           android:layout_marginHorizontal="5dp"
           android:text="Add Unit"
           app:icon="@drawable/baseline_add_24"
           app:iconGravity="textStart"
           android:textColor="@color/white"
           />
       <View
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:layout_weight="1"

           />

       <com.google.android.material.button.MaterialButton
           style="@style/Widget.Material3.Button.IconButton.Filled"
           android:id="@+id/btn_refresh"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:backgroundTint="#0F911C"
           app:cornerRadius="5dp"
           android:layout_marginVertical="10dp"
           android:layout_marginHorizontal="5dp"
           android:text="Refresh"
           android:textSize="14sp"
           app:iconPadding="5dp"
           app:icon="@drawable/baseline_refresh_24"
           app:iconGravity="textStart"
           android:textColor="@color/white"
           />
   </LinearLayout>
    <TextView
        android:layout_below="@id/appbar_secondary"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/table_empty_indicator_textview"
        android:text="No Data in the table"
        android:drawableTop="@drawable/empty_box__64"
        android:translationZ="10dp"
        android:visibility="gone"/>
   <HorizontalScrollView
       android:id="@+id/horizontal_view"
       android:layout_below="@id/appbar_secondary"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       >
       <de.codecrafters.tableview.TableView
           xmlns:table="http://schemas.android.com/apk/res-auto"
           android:id="@+id/tableView"
           android:layout_width="680dp"
           android:layout_height="wrap_content"
           android:outlineProvider="bounds"
           android:fitsSystemWindows="false"
           table:tableView_columnCount="6"
           table:tableView_headerColor="@color/white"
           android:clickable="true"
           />
   </HorizontalScrollView>
</RelativeLayout>