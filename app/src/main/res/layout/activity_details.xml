<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/blue"
        >
        <ImageView
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/jason_vehicle_trading"
            android:layout_margin="30dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/appbar_secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbar"
        android:gravity="center"
        android:background="@color/white"
        android:paddingVertical="8dp"
        android:elevation="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:text="Details" />
    </LinearLayout>

    <ScrollView
        android:layout_below="@id/appbar_secondary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/linear_layout_footer"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/image_view_unit_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/image_placeholder"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:layout_marginHorizontal="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chassis Number:"
                        android:textColor="@color/black"
                        android:labelFor="@id/editText_chassis_number"
                        />

                    <EditText
                        android:id="@+id/editText_chassis_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:height="48dp"
                        android:background="@color/gray_100"
                        android:editable="false"
                        android:inputType="none"
                        android:focusable="false"
                        android:focusedByDefault="false"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Year Model:"
                        android:textColor="@color/black"
                        android:labelFor="@id/editText_year_model"
                        />

                    <EditText
                        android:id="@+id/editText_year_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:height="48dp"
                        android:background="@color/gray_100"
                        android:editable="false"
                        android:inputType="none"
                        android:focusable="false"
                        android:maxLines="1"
                        android:minHeight="48dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price:"
                        android:textColor="@color/black"
                        android:labelFor="@id/editText_price"
                        />

                    <EditText
                        android:id="@+id/editText_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:height="48dp"
                        android:background="@color/gray_100"
                        android:inputType="none"
                        android:focusable="false"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Updated Price:"
                        android:textColor="@color/black"
                        android:labelFor="@id/editText_updated_price"
                        />

                    <EditText
                        android:id="@+id/editText_updated_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:height="48dp"
                        android:background="@color/gray_100"
                        android:inputType="number"
                        android:maxLines="1"
                        android:focusedByDefault="false"
                        android:focusable="false"
                        android:minHeight="48dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Container Number:"
                    android:textColor="@color/black"
                    android:labelFor="@id/editText_container_number"
                    />

                <EditText
                    android:id="@+id/editText_container_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:height="48dp"
                    android:background="@color/gray_100"
                    android:inputType="number"
                    android:maxLines="1"
                    android:focusedByDefault="false"
                    android:minHeight="48dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp" />
            </LinearLayout>
            <!-- Specs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Specs"
                    android:labelFor="@id/editText_specs"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/editText_specs"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/gray_100"
                    android:inputType="none"
                    android:focusable="false"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/linear_layout_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:elevation="4dp"
        android:background="@color/white"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            style="@style/Widget.Material3.Button.IconButton.Filled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/white"
            android:text="Back"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:icon="@drawable/outline_arrow_circle_left_24"
            app:iconPadding="5dp"
            app:iconSize="30dp"
            app:iconTint="@color/black" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete"
            style="@style/Widget.Material3.Button.IconButton.Filled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/red"
            app:cornerRadius="5dp"
            android:text="Delete"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:iconGravity="textEnd"
            app:iconPadding="5dp"
            app:iconSize="20dp"
            app:iconTint="@color/white" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_update"
            style="@style/Widget.Material3.Button.IconButton.Filled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/blue"
            app:cornerRadius="5dp"
            android:text="Update"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:iconGravity="textEnd"
            app:iconPadding="5dp"
            app:iconSize="20dp"
            app:iconTint="@color/white" />

    </LinearLayout>

</RelativeLayout>